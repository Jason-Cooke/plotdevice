// sysconfig.get_config_var('INCLUDEPY')
HEADER_SEARCH_PATHS = $(inherited) /System/Library/Frameworks/Python.framework/Versions/2.7/include/python2.7

// sysconfig.get_config_var('LIBPL')
LIBRARY_SEARCH_PATHS = $(inherited) /System/Library/Frameworks/Python.framework/Versions/2.7/lib/python2.7/config

// '-lpython%i.%i' % sys.version_info[:2]
OTHER_LDFLAGS = $(inherited) -lpython2.7